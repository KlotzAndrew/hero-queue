<% provide(:title, "Log in") %>
<section id="user_login">
  <div class="container">
    <div class="col-md-4 col-md-offset-4">
      <div class="well semi_transparent">
        <h1>Log in</h1>
        <p class="text-center">(currently only for admins!)</p>
          <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= link_to "(forgot password)", new_password_reset_path %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :remember_me, class: "checkbox inline" do %>
            
              <%= f.check_box :remember_me, style: "margin-left: 0px;" %>
              <span style="margin-left:20px;">Remember me on this computer</span>
            <% end %>

            <div class="center-button">
              <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
          <% end %>

          <p class="text-center">New user? <%= link_to "Sign up now!", signup_path %></p>
      </div>
    </div>
  </div>
</section>        