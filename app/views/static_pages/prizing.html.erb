	<% provide(:title, "Prizing") %>
	<section id="format">
		<div class="container">
			<div class="col-md-10 col-md-offset-1">
				<div class="well semi_transparent">
					<div class="page-header">
					  <h1 class="text-center">Prizing Overview</h1>
					</div>
				
					<div class="testme">
					</div>

					<h2 class="text-center">Single Event</h2>
					<h4>Each Tournament</h4>
					<p>
						Cash Prizing:
					</p>
					<ul>
						<li>1st place: $250</li>
						<li>2nd place: $100</li>
					</ul>
						
					<p>
						RP Prizing (*PENDING RIOT APPORVAL):
					</p>				
					<ul>
						<li>1st place: 4200 RP, Ryze, Triumphant Ryze, 10-Win IP Boost </li>
						<li>2nd place: 3000 RP, 10-Win IP Boost </li>
