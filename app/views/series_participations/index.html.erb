<% provide(:title, "#{@series.name} standing") %>

<section id="tournament_show">
	<div class="container">
		
		<div class="col-md-8 col-md-offset-2">
      <div class="well semi_transparent">
		    <table class="table table-hover">
		      <thead>
		        <tr>
		        	<th>Position</th>
		          <th>Summoner</th>
		          <% @series.tournaments.count.times do |x| %>
		          	<th>Tournament #<%= x %></th>
		          <% end %>
		        </tr>
		      </thead>
		      <tbody>
		        <%= render :partial => 'series_participations', :collection => @series_participations, locals:{total_tournaments: @series.tournaments.count} %>
		      </tbody>
		    </table>
      </div>
     </div>

	</div>
</section>